
header, section, footer, aside, nav, article, figure { display: block; }

*{ 
	margin: 0px;
	padding: 0px;
}

body {
	margin: 0 auto;
	width: 900px;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	background-color: #EEE;
	background-image: url(<%= asset_path 'background.png' %>);
	
	padding: 0;
	margin: 0;
	text-align: left;
	clear: both; 
	margin: 0 auto; 
	width: 995px;
}  


header {
	line-height: 0;
}

header section {
	position: relative;
	padding: 0;
	width: 150px;
	margin: 0 auto 2em auto;
	font-size: 12px;
	line-height: 20px;
	float: right;
	top: 30px;
	right: 0px;
}

header section ul {
	list-style: none; 
	margin: 0 auto; 

} 

header section li {
	display: inline; 
	margin: 0;
	padding: 5px;
}

header section a:link, header section a:visited {
	color: #000;
	height: 30px; 
	text-decoration: none;
}

header nav {
	position: relative;
	font-size: 16px;
	height: 40px;
	line-height: 30px;
	margin: 0px auto;
	padding: 0;
	width: 995px;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	background-image: url(<%= asset_path 'navbar_background.png' %>);
	background-repeat: repeat-x;
}  

ul#navbar {
	padding: 0;
	margin: 0;
}

ul#navbar li {
	list-style: none;
	float: left;
}

ul#navbar li a {
	display: block;
	padding-top: 5px;
	padding-bottom: 4px;
	color: #fff;
	text-decoration: none;
	background-image: url(<%= asset_path 'navbar_divider-regular.png' %>);
	background-repeat: no-repeat;
	background-position: right;
	text-align:center;
	margin-bottom:2px;
}

ul#navbar li:last-child a {
	background: none;
}

ul#navbar li ul li a{
	background: none;
	margin-bottom:0;
	border-bottom: 1px solid #eeeeee;
}

ul#navbar li ul li:last-child a {
	border-bottom: none;
}

ul#navbar li ul {
	display:none;
	z-index:+1;
}


ul#navbar li:hover ul {
	display: block;
	position: absolute;
	top:auto;
	left:auto;
	z-index:+1;
}

ul#navbar li:hover li {
	float: none; 
	background-image: url(<%= asset_path 'navbar_background.png' %>);
	background-repeat: repeat-x;
	border-right: 1px solid #8a8a8a;
	z-index:+1;
}

ul#navbar li:hover a {
	color: #fff;
}

ul#navbar li a:hover {
	color: #a1c2e6;
	border-right: none;
}

#feature {
	position: relative;	
	z-index: 0;
	margin-top: 10px;
	width:990px;
	padding:0px;
	height:420px;
	
	border: 2px solid #d5d5d5;
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	
	box-shadow: 1px 1px #d5d5d5;
	-moz-box-shadow: 1px 1px #d5d5d5;
	-webkit-box-shadow: 1px 1px #d5d5d5;
}

#feature img {
	border-radius: 8px;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
}


#feature-nav{
	position: relative;
	top: -15px;
	right: -5px;
	z-index: 1000;
}

#feature-nav a{
	display: block; 
	width: 10px; 
	height: 10px;
	float: left; 
	margin: 0 4px;
	background-color: #fff; 
	text-indent: -9999px;
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
}

#feature-nav a:hover, #feature-nav a.activeSlide {
	background-color: #a1c2e6;
}

#slideshow {
	position: relative;
	margin-top: 10px;
	overflow-x: scroll; overflow-y: hidden;
	width: 990px;
	height: auto;
}

#slideshow article {
	border: 1px solid #999;
	background-color: #FFF;
	width: 317px;
	height: 393px;
	float: left;
	margin-right: 16px;
	
	border: 2px solid #d5d5d5;
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	
	box-shadow: 1px 1px #d5d5d5;
	-moz-box-shadow: 1px 1px #d5d5d5;
	-webkit-box-shadow: 1px 1px #d5d5d5;
}

#slideshow article header {
	height: 34px;
	position: relative;
	overflow: hidden;
	border-top-radius: 8px;
	-moz-border-radius-topleft: 8px;
	-moz-border-radius-topright: 8px;
	-webkit-border-top-right-radius: 8px;
	-webkit-border-top-left-radius: 8px;
	background-image: url(<%= asset_path 'slideshow/article_header.png' %>);
	background-repeat: repeat-x;
}

#slideshow article header h1 {
	text-align: center;
	color: #FFF;
	font-size:14px;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	font-weight: bold;
	text-transform: capitalize;
	line-height: 31px;	
}

#slideshow article img {
	margin-top: 5px;
	margin-right: 7.5px;
	margin-left: 7.5px;
}

#slideshow article p {
	font-size: 14px;
	font-weight: normal;
	margin-top: 17px;
	margin-right: 7.5px;
	margin-bottom: 20px;
	margin-left: 7.5px;
	text-align: center;
}

#slideshow nav {
	position: absolute;
	top: 50%;
	z-index: 1000;
}

#slideshow nav a {
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	
	display: block;
	width: 47px;
	height: 47px;
	background-image: url(<%= asset_path 'slideshow/article_arrow_background.png' %>);
	background-repeat: repeat-x;
}

#slideshow nav a img {
	margin-left: 11px;
	margin-top: 11px;
}

#slideshow .prev {
	float: left;
	margin-left: 2px;
	margin-right: 897px;
}

#slideshow .next {
	float: right;
}

#slideshow .next img {
    -moz-transform: scaleX(-1);
    -o-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    filter: FlipH;
	-ms-filter: "FlipH";
}


