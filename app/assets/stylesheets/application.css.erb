
header, section, footer, aside, nav, article, figure { display: block; }

*{ 
	margin: 0px;
	padding: 0px;
}

body {
	margin: 0 auto;
	width: 900px;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	background-color: #EEE;
	background-image: url(<%= asset_path 'background.png' %>);
	
	padding: 0;
	margin: 0;
	text-align: left;
	clear: both; 
	margin: 0 auto; 
	width: 900px;
}  


header {
	line-height: 0;
}

header section {
	position: relative;
	padding: 0;
	width: 150px;
	margin: 0 auto 2em auto;
	font-size: 12px;
	line-height: 20px;
	float: right;
	top: 30px;
	right: 0px;
}

header section ul {
	list-style: none; 
	margin: 0 auto; 

} 

header section li {
	display: inline; 
	margin: 0;
	padding: 5px;
}

header section a:link, header section a:visited {
	color: #000;
	height: 30px; 
	text-decoration: none;
}

header nav {
	position: relative;
	font-size: 16px;
	height: 40px;
	line-height: 30px;
	margin: 0px auto;
	padding: 0;
	width: 900px;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	background-image: url(<%= asset_path 'navbar_background.png' %>);
	background-repeat: repeat-x;
}  

ul#navbar {
	padding: 0;
	margin: 0;
}

ul#navbar li {
	list-style: none;
	float: left;
}

ul#navbar li a {
	display: block;
	padding-top: 5px;
	padding-bottom: 4px;
	color: #fff;
	text-decoration: none;
	background-image: url(<%= asset_path 'navbar_divider-regular.png' %>);
	background-repeat: no-repeat;
	background-position: right;
	text-align:center;
	margin-bottom:2px;
}

ul#navbar li:last-child a {
	background: none;
}

ul#navbar li ul li a{
	background: none;
	margin-bottom:0;
	border-bottom: 1px solid #eeeeee;
}

ul#navbar li ul li:last-child a {
	border-bottom: none;
}

ul#navbar li ul {
	display:none;
	z-index:+1;
}


ul#navbar li:hover ul {
	display: block;
	position: absolute;
	top:auto;
	left:auto;
	z-index:+1;
}

ul#navbar li:hover li {
	float: none; 
	background-image: url(<%= asset_path 'navbar_background.png' %>);
	background-repeat: repeat-x;
	border-right: 1px solid #8a8a8a;
	z-index:+1;
}

ul#navbar li:hover a {
	color: #fff;
}

ul#navbar li a:hover {
	color: #a1c2e6;
	border-right: none;
}

section#slideshow {
	position:absolute;
	width:896px;
	height:400px;
	border: 2px solid #d5d5d5;
	z-index:0;
	margin-top: 10px;
	
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	background-color: #FFF;
	
	-moz-box-shadow: 1px 1px 0px #d5d5d5;
	-webkit-box-shadow: 1px 1px 0px #d5d5d5;
	box-shadow: 1px 1px 0px #d5d5d5;
}

