<header>
	<nav class ="round">
		<ul>
			<li><%= link_to "Home", root_path %></li>
  			<% if user_signed_in? %>
    			<li><%= link_to "Sign Out", logout_path, :method => :delete %></li>
				<li><%= link_to "My Account", profile_path %></li>
  			<% else %>
    			<li><%= link_to "Sign Up", signup_path %></li>
				<li><%= link_to "Sign In", login_path %></li>
  			<% end %>
			<li><%= link_to "News", articles_path %></li>
  				<% for page in Page.roots %>
    				<li><%= link_to h(page.title), page %></li>
					<% for child in page.children %>
    						<li><%= link_to h(child.title), child %></li>
  					<% end %>
  				<% end %>
		</ul>
	</nav>
</header>
