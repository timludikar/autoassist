<header>
	<nav class ="round">
		<ul>
			<li><%= link_to "Home", root_path %></li>
			<% if signed_in? %>
				<li><%= link_to "Profile", current_user %></li>
				<li><%= link_to "Logout", logout_path, :method => :delete %></li>
			<% else %>
				<li><%= link_to "Sign In", login_path %></li>
				<li><%= link_to "Sign Up", signup_path %></li>
			<% end %>
		</ul>
	</nav>
</header>
