<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Frontpage?</th>
    <th>Visible?</th>
	<th></th>
    <th></th>
	<th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.content %></td>
	<td><%= check_box_tag article.frontpage, article.frontpage, if article.frontpage == true :true end, :disabled => true %></td>
	<td><%= check_box_tag article.visible, article.visible, if article.visible == true :true end, :disabled => true %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

